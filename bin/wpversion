#!/bin/bash

# Version change helper WordPress plugins 
#
# @author Michael Cannon <mc@aihr.us>

source ~/.skel/bin/wpinit ${@}
echo

cd ${SITE_WP_PLUGINS}

for PLUGIN in ${PLUGINS}
do
	files="CHANGELOG.md
README.md
readme.txt
requirements.php
${PLUGIN}.php"

	for file in ${files}
	do
		file_name="${PLUGIN}/${file}"
		if [[ -e "${file_name}" ]]
		then
			vi ${file_name}
		fi
	done
done

echo cd ${PLUGIN_DIR}
